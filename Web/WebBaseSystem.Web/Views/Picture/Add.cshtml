@using WebBaseSystem.Web.ViewModels

@model PictureInputModel

@{
    ViewBag.Title = "Add Picture";
}

<h2>@ViewBag.Title.</h2>

<div class="row">
    @using (Html.BeginForm("Add", "Picture", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <h4>Add picture</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.Title, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">Picture</label>
            <div class="col-md-10">
                <span class="btn btn-default btn-file">
                    Browse... <input type="file" name="picture" id="pictureToCheck" onchange="return checkImageSize('pictureToCheck', 2048000) && checkFileExtension('pictureToCheck')">
                </span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Add" onclick="return checkImageSize('pictureToCheck', 2048000) && checkFileExtension('pictureToCheck')" />
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
